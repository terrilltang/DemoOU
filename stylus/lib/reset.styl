

//main 
* {
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  overflow: hidden;
  font-family: Arial, Helvetica, sans-serif;
  -webkit-touch-callout: none;

}

h1, h2, h3 {
  margin: 0;
  padding: 0;
  line-height: 2;
  font-weight: 400;
  font-family: inherit;
  ellipsis();
}

:focus {
  outline: none;
}

select {
  width: 100%;
  height: rem(88);
  -webkit-appearance: none;
  font-size: $font-normal;
  option {
    width: 100%;
    line-height: 2;
    font-size: inherit;
  }
}

input, textarea {
  font-family: inherit;
  border: 1px solid $color-sub;
  padding: rem(16);
  width: 100%;
  resize: none;
  font-size: $font-large;
}

span {
  display: inline-block;
}
